<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<body class="container">
<% include include/navBar.ejs %>
<main role="main">
    <div class="album py-5 bg-light">
        <div class="containner">
            <div class="row">
                <% function pad2(n) {
                    return (n < 10 ? '0' : '') + n;
                }

                for(let i = 0; i < data.length; i++) {
                    var month = pad2(data[i].date.getMonth() + 1);//months (0-11)
                    var day = pad2(data[i].date.getDate());//day (1-31)
                    var year = data[i].date.getFullYear(); %>
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top"
                             src="<%= data[i].link %>"
                             alt="img" style="width: 100%;height: 500px">
                        <div class="card-body">
                            <p class="card-text"><%= data[i].infor %></p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a href="/update/<%= data[i].id %>">
                                        <button type="button" class="btn btn-sm btn-outline-secondary">Sửa</button>
                                    </a>
                                    <a href="/deleteImg/<%= data[i].id %>">
                                        <button type="button" class="btn btn-sm btn-outline-secondary">Xóa</button>
                                    </a>
                                </div>
                                <small class="text-muted"><%= day + "-" + month + "-" + year %></small>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </div>
</main>
</body>
</html>
